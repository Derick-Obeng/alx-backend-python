#!/usr/bin/env bash
# kurbeScript - Ensure Minikube is installed, then start Kubernetes and check status

set -e  # Exit immediately if a command fails

# 1ï¸âƒ£ Check if Minikube is installed
if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube is not installed."
    echo "Please install it: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi
echo "âœ… Minikube is installed."

# 2ï¸âƒ£ Start Kubernetes cluster
echo "ğŸš€ Starting Minikube..."
minikube start

# 3ï¸âƒ£ Verify cluster is running
echo "ğŸ” Verifying Kubernetes cluster..."
kubectl cluster-info

# 4ï¸âƒ£ List all available pods
echo "ğŸ“‹ Available pods:"
